<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="akiba.com.br.atmempresaconsultoria.MainActivity"
    android:background="@android:color/background_light">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo"
        android:id="@+id/atmId"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:contentDescription=""
        android:background="@drawable/logo" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/menu_empresa"
        android:layout_marginTop="31dp"
        android:id="@+id/empresaId"
        android:layout_below="@+id/atmId"
        android:layout_alignLeft="@+id/atmId"
        android:layout_alignStart="@+id/atmId"
        android:contentDescription=""
        android:background="@drawable/menu_empresa" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/menu_servico"
        android:id="@+id/servicosId"
        android:layout_alignTop="@+id/empresaId"
        android:layout_alignRight="@+id/atmId"
        android:layout_alignEnd="@+id/atmId"
        android:contentDescription=""
        android:background="@drawable/menu_servico" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/menu_contato"
        android:id="@+id/contatoId"
        android:layout_alignTop="@+id/clienteId"
        android:layout_alignLeft="@+id/servicosId"
        android:layout_alignStart="@+id/servicosId"
        android:contentDescription=""
        android:background="@drawable/menu_contato" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/menu_cliente"
        android:layout_marginTop="39dp"
        android:id="@+id/clienteId"
        android:contentDescription=""
        android:layout_below="@+id/empresaId"
        android:layout_alignLeft="@+id/empresaId"
        android:layout_alignStart="@+id/empresaId"
        android:background="@drawable/menu_cliente" />
</RelativeLayout>
