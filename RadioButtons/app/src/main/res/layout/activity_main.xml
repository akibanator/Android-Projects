<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="akiba.com.br.radiobuttons.MainActivity">

    <TextView
        android:text="Qual sua comida preferida?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="29dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold"
        android:textSize="18sp" />

    <TextView
        android:text="Resposta..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textViewResultadoId" />

    <Button
        android:text="Escolher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonId"
        android:layout_above="@+id/textViewResultadoId"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:id="@+id/radioGroupId">

        <RadioButton
            android:text="MacarrÃ£o"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_marginTop="10dp"
            android:id="@+id/radioButtonMacarraoId"
            android:layout_weight="1" />

        <RadioButton
            android:text="Lasanha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioButtonParmegianaId"
            android:layout_alignLeft="@+id/radioButtonParmegianaId"
            android:layout_alignStart="@+id/radioButtonParmegianaId"
            android:id="@+id/radioButtonLasanhaId"
            android:layout_weight="1" />

        <RadioButton
            android:text="Parmegiana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButtonParmegianaId"
            android:layout_below="@+id/radioButtonMacarraoId"
            android:layout_alignLeft="@+id/radioButtonMacarraoId"
            android:layout_alignStart="@+id/radioButtonMacarraoId"
            android:layout_weight="1" />
    </RadioGroup>
</RelativeLayout>
